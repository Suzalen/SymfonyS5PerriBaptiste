{% extends 'base-admin.html.twig' %}

{% block title %}Tableau de bord{% endblock %}
{% block header %}Tableau de bord{% endblock %}

{% block body %}
    <div class="mb-8">
        <h3 class="text-2xl font-bold text-gray-800">Vue d'ensemble</h3>
        <p class="text-gray-600">Voici ce qui se passe dans votre activité aujourd'hui.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Users Card -->
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500">
            <div class="flex items-center justify-between">
                <div>
                    <div class="text-sm font-medium text-gray-500 uppercase">Utilisateurs</div>
                    <div class="text-3xl font-bold text-gray-800">{{ userCount }}</div>
                </div>
                <div class="p-3 bg-blue-100 rounded-full text-blue-600">
                    <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
                </div>
            </div>
            {% if is_granted('MANAGE_USERS') %}
            <div class="mt-4">
                <a href="{{ path('app_admin_user_index') }}" class="text-sm text-blue-600 hover:underline">Gérer les utilisateurs &rarr;</a>
            </div>
            {% endif %}
        </div>

        <!-- Products Card -->
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-500">
            <div class="flex items-center justify-between">
                <div>
                    <div class="text-sm font-medium text-gray-500 uppercase">Produits</div>
                    <div class="text-3xl font-bold text-gray-800">{{ productCount }}</div>
                </div>
                <div class="p-3 bg-green-100 rounded-full text-green-600">
                    <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
                </div>
            </div>
            <div class="mt-4">
                <a href="{{ path('app_admin_product_index') }}" class="text-sm text-green-600 hover:underline">Voir les produits &rarr;</a>
            </div>
        </div>

        <!-- Clients Card -->
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-purple-500">
            <div class="flex items-center justify-between">
                <div>
                    <div class="text-sm font-medium text-gray-500 uppercase">Clients</div>
                    <div class="text-3xl font-bold text-gray-800">{{ clientCount }}</div>
                </div>
                <div class="p-3 bg-purple-100 rounded-full text-purple-600">
                    <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                </div>
            </div>
            {% if is_granted('MANAGE_CLIENTS') %}
            <div class="mt-4">
                <a href="{{ path('app_admin_client_index') }}" class="text-sm text-purple-600 hover:underline">Gérer les clients &rarr;</a>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
