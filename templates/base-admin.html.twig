<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Backoffice{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ importmap('app') }}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ importmap('app') }}
        {% endblock %}
    </head>
    <body class="bg-gray-100 font-sans antialiased">
        <div class="flex h-screen overflow-hidden">
            <!-- Sidebar -->
            <aside class="w-64 bg-gray-800 text-white flex flex-col">
                <div class="p-4 text-center text-xl font-bold border-b border-gray-700">
                    Ma Société
                </div>
                <nav class="flex-1 overflow-y-auto py-4">
                    <ul>
                        <li>
                            <a href="{{ path('app_admin_dashboard') }}" class="block px-4 py-2 hover:bg-gray-700 transition">
                                Tableau de bord
                            </a>
                        </li>
                        
                        {% if is_granted('MANAGE_USERS') %}
                        <li>
                            <a href="{{ path('app_admin_user_index') }}" class="block px-4 py-2 hover:bg-gray-700 transition">
                                Utilisateurs
                            </a>
                        </li>
                        {% endif %}

                        {% if is_granted('PRODUCT_VIEW') %}
                        <li>
                            <a href="{{ path('app_admin_product_index') }}" class="block px-4 py-2 hover:bg-gray-700 transition">
                                Produits
                            </a>
                        </li>
                        {% endif %}
                        
                        {% if is_granted('MANAGE_CLIENTS') %}
                        <li>
                            <a href="{{ path('app_admin_client_index') }}" class="block px-4 py-2 hover:bg-gray-700 transition">
                                Clients
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </nav>
                <div class="p-4 border-t border-gray-700">
                    <div class="mb-2 text-sm text-gray-400">
                        {{ app.user.userIdentifier }}
                    </div>
                    <a href="{{ path('app_logout') }}" class="block text-center bg-red-600 hover:bg-red-700 text-white py-2 rounded">
                        Déconnexion
                    </a>
                </div>
            </aside>

            <!-- Main Content -->
            <div class="flex-1 flex flex-col overflow-hidden">
                <header class="bg-white shadow p-4 flex justify-between items-center">
                    <h2 class="text-xl font-semibold text-gray-800">
                        {% block header %}Tableau de bord{% endblock %}
                    </h2>
                </header>

                <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                    {% for message in app.flashes('success') %}
                        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% block body %}{% endblock %}
                </main>
            </div>
        </div>
    </body>
</html>
